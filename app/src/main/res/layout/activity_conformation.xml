<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hungrybells.com.hungrybells_v20.Activity.activity.ConformationActivity"
    android:background="#ffffff">


    <!-- Used Toolbar instead of ActionBar for more flexibility -->

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:visibility="invisible"/>



    <TextView
        android:id="@+id/success"
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Placed Successfully!"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks! We have received your order. We will be calling you shortly to verfiy the order."
        android:layout_below="@+id/success"
        android:layout_marginTop="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/success_text"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call us for any query."
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="080-88002288"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:textColor="#1d39e3" />.
            android:layout_gravity="center"
            android:onClick="callBtnClicked"
            android:textColor="#4A90E2"/>

    </LinearLayout>




    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/color_white"
        android:background="#4A90E2"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:onClick="confirmBtnClicked"/>





</RelativeLayout>
