<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>

        <!--
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="fontPath">GothamRounded-Book.otf</item>
        <item name="android:textSelectHandle">@drawable/cursor_handle_center</item>
        -->

        <!--
        <item name="colorDefaultRed">@color/style_color_default_red</item>
        <item name="colorDefaultTeal">@color/style_color_default_teal</item>
        <item name="colorDefaultYellow">@color/style_color_default_yellow</item>
        <item name="colorDefaultGray">@color/style_color_default_gray</item>
        -->

    </style>

    <!-- ToolBar Style -->
    <style name="myToolbarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">26sp</item>
        <item name="homeAsUpIndicator">@null</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="HBTagButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/tag_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:height">40sp</item>
    </style>

    <style name="HBSidebarMainTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#365066</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HBSidebarDetailTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="HBTagTextStyle" parent="style/AppTheme">
        <item name="android:textColor">@color/tag_color</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="HBTextStyle36" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20sp</item>
        <item name="fontPath">GothamRounded-Book.otf</item>
    </style>

    <style name="HBTextStyle32" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
        <item name="fontPath">GothamRounded-Book.otf</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">GothamRounded-Book.otf</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="MoreDealTitle" >
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Gap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="OrderDetailActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>


    <attr name="sc_corner_radius" format="dimension" />
    <attr name="sc_border_width" format="dimension" />
    <attr name="sc_tint_color" format="color" />
    <attr name="sc_checked_text_color" format="color" />

</resources>
